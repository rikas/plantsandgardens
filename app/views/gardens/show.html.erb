<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @garden.picture_url %>)">
  <%= @garden.name %>
</div>

<p>
  <%= link_to 'Add new plant', new_garden_plant_path(@garden), class: 'btn btn-sm btn-secondary mt-2' %>
</p>

